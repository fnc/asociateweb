{% extends 'asociateyaBundle::ay_base.html.twig' %}


 {% block stylesheets %}
  <script>
    $(document).ready(function(){
      $("#boton_buscar").addClass("active");

      $('#boton_submit').click( function(event) {
        event.preventDefault();
        $.get( '{{path('emprendimiento_busquedaFiltrada')}}'+'?'+ $('#search_form').serialize(), function(data) {$("#resultados_content").html(data);},'html');
      });
    });
  </script>
 {% endblock %}

{% block body -%}
<link href={{ asset('bundles/asociateya/css/emprendimientos.css')}} rel="stylesheet" type="text/css">

<div class="sidebar" id="sidebar_container">

  <!-- BUSCAR EMPRENDIMIENTOS -->
  <form method="get" action=" " id="search_form">
    <div class="sidebar_item">
      <label class="titulo">Nombre:</label>
        <p>
          <input class="search" type="text" name="palabra" id="palabra" value="" />
        </p>

    <!-- FILTRAR EMPRENDIMIENTOS -->
        <label class="titulo">Categoria:</label><br>
        <input type="radio" id="Todas" value="" name="categoria" ><label class="light" for="animales">Todas</label><br>
        {% for categoria in categorias %}
          <input type="radio" id="{{categoria.nombre}}" value="{{categoria.nombre}}" name="categoria" ><label class="light" for="animales">{{categoria.nombre}}</label><br>
        {% endfor %}
        <br>
      <label class="titulo">Precio menor a:</label>
        <p>
          <input class="search" type="text" name="precio" id="precio" value="" />
          <br><button type="submit" id="boton_submit" class="boton boton_submit">Buscar</button>
          <br><button type="reset" class="boton boton_submit">Limpiar</button>
        </p>
    </div>
  </form>




</div>

<div class="content" id="resultados_content">

        {% if entities %}
            <h1>Emprendimientos</h1>
            <!-- EMPIEZA EL PORTAFOLIO -->
            <div id="portfolio_container">
                <ul>
                    {% for entity in entities %}
                      <li>
                        {% include 'asociateyaBundle:Emprendimiento:preview.html.twig' with {entity: entity} %}
                      </li>
                    {% endfor %}

                </ul>
                <!--REFER TO THE js/drifolio.js-->
            </div><!-- TERMINA EL PORTAFOLIO -->
        {% else %}
            <h3>No se encontr√≥ ningun emprendimiento.</h3>
        {% endif %}
      </div>

{% endblock %}
